provider_installation {
  filesystem_mirror {
    path    = "{{ terraform_provider_dir }}"
    include = ["{{ terraform_domain }}/{{ terraform_provider_full_name }}"]
  }
  direct {
    exclude = ["{{ terraform_domain }}/{{ terraform_provider_full_name.split('-')[2] }}"]
  }
}
plugin_cache_dir = "$HOME/.terraform.d/plugin-cache"
